mixin portfolioModal(id=1, portfolioModalTitle='Default Title', imgSrc='assets/img/portfolio/cabin.png', portfolioModalText=[])
    portfolioModal.portfolio-modal.modal.fade(tabindex='-1',
            role='dialog', aria-labelledby='portfolioModal'+id+'Label', 
            aria-hidden='true',id='portfolioModal'+id)
        .modal-dialog.modal-xl(role='document')
            .modal-content
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true')
                        i.fas.fa-times
                .modal-body.text-center
                    .container
                        .row.justify-content-center
                            .col-lg-8
                                // Portfolio Modal - Title
                                h2.portfolio-modal-title.text-secondary.text-uppercase.mb-0 #{portfolioModalTitle}
                                // Icon Divider
                                .divider-custom
                                    .divider-custom-line
                                    .divider-custom-icon
                                        i.fas.fa-star
                                    .divider-custom-line
                                // Portfolio Modal - Image
                                img.img-fluid.rounded.mb-5(src=imgSrc, alt='')
                                // Portfolio Modal - Text
                                p.mb-5
                                    each val in portfolioModalText
                                        | #{val}
                                        br
                                button.btn.btn-primary(href='#', data-dismiss='modal')
                                    i.fas.fa-times.fa-fw
                                    | Close Window
